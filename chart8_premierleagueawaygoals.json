{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://app.sportdataapi.com/api/v1/soccer/matches?apikey=b8bb8050-f3d3-11eb-808b-334144de1112&season_id=352&date_from=2020-09-19",
    "format": {"type": "json", "property": "data"}
  },
  "title": {
    "text": "Premier League - away goals scored by bottom 6",
    "subtitle": ["Goals scored away, 20/21 season", ""],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "darkorange"
  },
  "transform": [
    {
      "filter": {
        "field": "away_team.name",
        "oneOf": [
          "Southampton FC",
          "Brighton & Hove Albion",
          "Burnley FC",
          "Fulham FC",
          "West Bromwich Albion",
          "Sheffield United"
        ]
      }
    }
  ],
  "mark": {"type": "bar", "color": "rgb(245, 176, 66)"},
  "height": 100,
  "width": 150,
  "padding": {"top": 0, "bottom": 0, "right": 0, "left": 0},
  "encoding": {
    "x": {"field": "match_start", "type": "temporal", "title": null},
    "y": {"field": "stats.away_score", "type": "quantitative", "title": null},
    "facet": {
      "field": "away_team.name",
      "columns": 2,
      "title": null,
      "spacing": 15
    }
  },
  "config": {}
}