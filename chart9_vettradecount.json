{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "BitCoin Price",
  "title": {
    "text": "Cryptocurrency: VET trade count",
    "subtitle": "Source: coinapi.io",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "#d4bb29",
    "subtitleColor": "#d4bb29"
  },
  "data": {
    "url": "https://rest.coinapi.io/v1/ohlcv/VET/USD/history?period_id=8HRS&time_start=2021-06-01T00:00:00&limit=100&include_empty_items=false&apikey=96F17CD1-7520-40B1-B729-1507D00D0DB4",
    "format": {"type": "json"}
  },
  "height": 280,
  "width": 300,
  "mark": {
    "type": "area",
    "point": false,
    "interpolate": "linear",
    "color": "#d4bb29"
  },
  "encoding": {
    "x": {
      "field": "time_period_start",
      "type": "temporal",
      "axis": {
        "title": null,
        "grid": true,
        "labelSeparation": 10,
        "domainColor": "dimgrey",
        "labelColor": "#070707",
        "tickColor": "pink",
        "gridColor": "dimgrey"
      }
    },
    "y": {
      "field": "trades_count",
      "type": "quantitative",
      "title": "",
      "scale": {"domain": [0, 50000]},
      "axis": {
        "grid": false,
        "domainColor": "dimgrey",
        "labelColor": "#000000",
        "tickColor": "pink",
        "gridColor": "dimgrey",
        "format": "$.2s"
      }
    },
    "tooltip": [
      {"field": "time_period_start", "title": "Date", "type": "temporal"},
      {"field": "price_low", "title": "Low", "format": "$,.2d"},
      {"field": "price_high", "title": "High", "format": "$,.2d"}
    ]
  }
}
