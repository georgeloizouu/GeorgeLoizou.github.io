{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Bitcoin (BTC) daily price",
  "title": {
    "text": "Bitcoin (BTC): Daily Price ",
    "subtitle": "BTC price evolution from 2015 to 2021",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 11,
    "anchor": "start",
    "color": "black"
  },
  "config": {"background": "#ffffff", "view": {"stroke": "transparent"}},
  "data": {
    "url": "https://raw.githubusercontent.com/georgeloizouu/GeorgeLoizou.github.io/main/myinteractivedata",
    "format": {"type": "json", "property": "observations"}
  },
  "height": 300,
  "width": 300,
  "mark": {
    "type": "line",
    "point": false,
    "interpolate": "linear",
    "color": "orange",
    "strokeWidth":1.6,
    "width":2
  },
  "transform": [
    {"calculate": "timeParse(datum.date, '%d/%m/%Y')", "as": "Date"},
    {"calculate": "year(datum.date)", "as": "year"},
    {"filter": "datum.year>=minYear"},
    {"filter": "datum.year<=maxYear"}
  ],
  "params": [
    {
      "name": "minYear",
      "value": 2015,
      "bind": {
        "input": "range",
        "min": 2015,
        "max": 2021,
        "step": 1,
        "name": "Start year:"
      }
    },
    {
      "name": "maxYear",
      "value": 2021,
      "bind": {
        "input": "range",
        "min": 2015,
        "max": 2021,
        "step": 1,
        "name": "End year:"
      }
    }
  ],
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "axis": {
        "title": null,
        "grid": false,
        "labelSeparation": 1,
        "ticks": false
      }
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "title": null,
      "axis": {"grid": false, "format": "$,.5"}
    },
    "tooltip": [
      {
        "field": "date",
        "type": "temporal",
        "format": "%b-%d-%Y",
        "title": "Date"
      },
      {"field": "value", "type": "quantitative", "title": "Price in $"}
    ]
  }
}
